<form class="form-horizontal">
<fieldset>
<div class="form-group">
<label for="identification">Email</label>
{{input id="identification" value=identification placeholder="Enter Login" class="form-control"}}
<label for="password">Password</label>
{{input id='password' placeholder='Enter Password' type='password' value=password class="form-control"}}
<button type="submit" class="btn btn-default" {{action 'submit' on='submit'}}>Login</button>
</div>
</fieldset>
</form>   

{{error-display errorMessage=errorMessage}}